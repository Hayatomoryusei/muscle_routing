 <%= form_for @blog, url: blogs_path do |form| %>
  <div class="tomo">
    <div class="title">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
      <div class="time">
      <%= form.label :start_time %>
      <%= form.datetime_select :start_time %>
    </div>
  
    <div class="content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
  
  
    <div class="submit">
      <%= form.submit %>
    </div>

    <div class="main">
    <%= link_to "トップページへ戻る", motivations_path %>
    </div>

  <% end %>