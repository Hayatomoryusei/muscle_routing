<div class="container">
  <div class="section-title">
    <h1>トレーニング記録</h1>
  </div>

  <%= form_for @blog, url: blogs_path do |form| %>
    <div class="form-group">
      <%= form.label :title, "部位", class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :start_time, "トレーニング時間（時間単位）", class: "form-label" %>
      <%= form.select :start_time, options_for_select(1..5), {}, class: "form-control" %>
      <span class="unit-label">時間</span>
    </div>
  

    <div class="form-group">
      <%= form.label :content, "内容", class: "form-label" %>
      <%= form.text_area :content, rows: 3, class: "form-control" %>
    </div>

    <div class="button-container">
      <%= form.submit "記録する", class: "btn btn-submit" %>
    </div>
  <% end %>

  <div class="button-container">
    <%= link_to "←トップページへ戻る", motivations_path, class: "btn btn-back" %>
  </div>
</div>
