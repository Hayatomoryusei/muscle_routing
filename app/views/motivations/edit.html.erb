<div class="container motivation-edit-form">
  <div class="section-title">
    <h1>目標を編集</h1>
  </div>

  <%= form_for @motivation do |f| %>
    <div class="form-group">
      <%= f.label :contents, "目標内容", class: "form-label" %>
      <%= f.text_field :contents, size: 80, class: "form-control" %>
    </div>

    <div class="button-container">
      <%= f.submit "編集する", class: "btn btn-submit" %>
    </div>
  <% end %>

  <div class="button-container">
    <%= link_to "←トップページへ戻る", motivations_path, class: "btn btn-back" %>
  </div>
</div>
